    <!-- Header -->
    <%- include("./partials/header.ejs") %>

    <main class="main-post">
    <div class="post-header">
    <h1>Create post</h1>
    <h2>Add a new post for other members to see.</h2>
</div>

    <form action="/index" method="POST">
       <div class="location-logo"><i class="fa-solid fa-location-pin"></i><input class="location" type="text" name="location" placeholder="Where is this located..." /><br></div>
        <textarea class="desc" name="description" cols="30" rows="18" placeholder="Describe your recommendation..."></textarea><br>
        <div class="radio">
        <input type="radio" name="radio-visible" id="visability">
        <label for="radio-visible">Make public</label>
        <input  type="radio" name="radio-hidden" id="visability">
        <label for="radio-visible">Save post</label><br>
    </div>
        <!-- <input type="file" id="image" name="image" accept="image/png, image/jpeg"><br> -->
        <button class="btn-signup" type="submit">Save</button>
    </form>

